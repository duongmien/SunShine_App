<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DangKy">

    <ImageView
        android:id="@+id/img_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-450dp"
        android:src="@drawable/img_singup" />

    <TextView
        android:id="@+id/textDK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/opensans"
        android:text="ĐĂNG KÝ"
        android:textColor="#FF6838"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDK"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:width="330dp"
        android:height="60dp"
        android:background="@drawable/bg_edit_text_border"
        android:fontFamily="@font/opensans"
        android:hint="Nhập email đăng ký..."
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="330dp"
        android:height="60dp"
        android:background="@drawable/bg_edit_text_border"
        android:fontFamily="@font/opensans"
        android:hint="Nhập username..."
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="330dp"
        android:height="60dp"
        android:background="@drawable/bg_edit_text_border"
        android:fontFamily="@font/opensans"
        android:hint="Nhập password..."
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp" />

    <EditText
        android:id="@+id/check_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="330dp"
        android:height="60dp"
        android:background="@drawable/bg_edit_text_border"
        android:fontFamily="@font/opensans"
        android:hint="Nhập lại password..."
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

    </EditText>
    <ImageView
        android:id="@+id/eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/check_pass"
        android:layout_below="@id/pass"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="-40dp"
        android:src="@drawable/ic_eye" />

    <Button
        android:id="@+id/bt_singup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="330dp"
        android:height="55dp"
        android:background="@drawable/bg_button"
        android:fontFamily="@font/opensans"
        android:text="ĐĂNG KÝ"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_singup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/opensans"
        android:text="Đăng nhập với tài khoản đã có"
        android:textColor="#FF6838"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>